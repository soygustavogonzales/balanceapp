#top
	.navbar.navbar-inverse.navbar-fixed-top
		.container
			.navbar-header
				button.navbar-toggle(data-toggle="collapse",data-target=".navbar-collapse")
					i.icon-bar
					i.icon-bar
					i.icon-bar
				a.navbar-brand(href="#")
					img.logo(src="/images/logo-movlimSystems.png", alt="")
			.navbar-collapse.collapse
				ul.nav.navbar-nav
					li: a#menu(href="#menu")
										i(class="glyphicon glyphicon-wrench")
					li: a.btn(class="default",ng-click="toExcel()"): i.glyphicon.glyphicon-floppy-save
					li: a.btn.default(onclick="$('#modalNewArticle').modal('toggle')"): i.glyphicon.glyphicon-plus
					li: a.btn.default(onclick="$('#modalSearchArticle').modal('toggle')"): i.glyphicon.glyphicon-search
					if (user.email)
						li: a.btn(href="#")| #{user.email}
					li: a.btn(class="btn-danger",href="/users/logout"): i.glyphicon.glyphicon-off
